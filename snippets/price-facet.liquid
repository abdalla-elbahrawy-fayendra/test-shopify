{% comment %} <span class="field-currency fff">{{ cart.currency.symbol }}</span> {% endcomment %}
{% assign currency_symbol = shop.currency.symbol %}

{% if request.locale.iso_code == 'ar' %}
  <!-- Display currency symbol for Arabic -->
  <span class="field-currency" dir="rtl">{{ currency_symbol }} ر.س</span>
{% else %}
  <!-- Display currency symbol for English or other languages -->
  <span>{{ currency_symbol }} RS</span>
{% endif %}
<div class="field">
  <input
    class="field__input"
    name="{{ filter.min_value.param_name }}"
    id="{{ id_prefix }}{{ filter.label | escape }}-GTE"
    {%- if filter.min_value.value -%}
      value="{{ filter.min_value.value | money_without_currency }}"
    {%- endif -%}
    type="text"
    inputmode="decimal"
    placeholder="0"
    data-pattern="\d| |,|\."
    data-min="0"
    data-max="{{ filter.range_max | money_without_currency }}"
  >
  {% comment %}
    <label class="field__label" for="{{ id_prefix }}{{ filter.label | escape }}-GTE">
      {{- 'products.facets.from' | t -}}
    </label>
  {% endcomment %}
</div>

